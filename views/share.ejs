<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>ShareMyWork.io</title>
  <link rel="stylesheet" href="/stylesheets/share.css" />
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/7.0.0/css/all.min.css" integrity="sha512-DxV+EoADOkOygM4IR9yXP8Sb2qwgidEmeqAEmDKIOfPRQZOWbXCzLC6vjbZyy0vPisbH2SyW27+ddLVCN+OMzQ==" crossorigin="anonymous" referrerpolicy="no-referrer" />
</head>
<body>
  <div class="container">

    <h1 class="title">Share Content</h1>

    <!-- Mode Toggle -->
    <div class="mode-toggle">
      <button id="textBtn" class="active"><i class="fa-regular fa-file-lines"></i> Text</button>
      <button id="fileBtn"><i class="fa-solid fa-arrow-up-from-bracket"></i> File</button>
      <button id="receive-btn">Receive</button>
    </div>

    <!-- Dynamic Content -->
    <div id="contentArea" class="content">
      <textarea placeholder="Type or paste your text here..." id="textArea"></textarea>
    </div>

    <div id="uploadList">
    </div>
    <div class="code" id="code">3384SDH</div>
    <!-- Submit -->
    <button class="share-btn" id="share-btn">Share</button>
  </div>

  <script src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.12.2/gsap.min.js"></script>
  <script src="/javascripts/share.js"></script>
</body>
</html>
