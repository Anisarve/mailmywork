<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>MailMyWork.io</title>
  <script async src="https://www.googletagmanager.com/gtag/js?id=G-95YQNPYWYM"></script>
  <script src="/javascripts/google_analytics.js"></script>
  <link rel="stylesheet" href="/stylesheets/largefile.css" />
  <link rel="stylesheet" href="/stylesheets/navbar.css" />
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/7.0.0/css/all.min.css" integrity="sha512-DxV+EoADOkOygM4IR9yXP8Sb2qwgidEmeqAEmDKIOfPRQZOWbXCzLC6vjbZyy0vPisbH2SyW27+ddLVCN+OMzQ==" crossorigin="anonymous" referrerpolicy="no-referrer" />
</head>
<body>
    <!-- Navbar -->
  <header>
    <nav class="navbar">
      <div class="logo">MailMyWork.io</div>
      <ul class="nav-links">
        <li><a href="/">Mail My Work</a></li>
        <li><a href="/share">Share Files</a></li>
        <li><a href="/large-file">Large Files</a></li>
        <li><a href="/feedback">Feedback</a></li>
        <li><a href="/about">About</a></li>
      </ul>
      <div class="menu-toggle" id="menu-toggle">
        <span></span>
        <span></span>
        <span></span>
      </div>
    </nav>
  </header>


<div class="container">

  <!-- Tabs -->
  <div class="mode-toggle" style="margin-bottom: 1.5rem;">
    <button id="shareTab" class="active">
      <i class="fa-solid fa-share-nodes"></i> Share
    </button>
    <button id="receiveTab">
      <i class="fa-solid fa-download"></i> Receive
    </button>
  </div>

  <!-- Content -->
  <div id="shareContent" class="content">

    <h2 style="margin-bottom:1rem; text-align:center;">Share File</h2>

    <!-- Generated Code -->
    <div class="generated-code-box" id="generatedCodeBox" style="display:none;">
      <p style="font-size:1.2rem; text-align:center; letter-spacing:3px;" id="generatedCode"></p>
      <p style="font-size:0.9rem; text-align:center; margin-top:5px;">Connecting...</p>
    </div>

    <!-- Share Button -->
    <button class="submit-btn" id="generateCodeBtn" style="margin-top:1.5rem;">
      Generate Code & Connect
    </button>

    <button class="submit-btn" id="shareFileBtn" style="margin-top:1rem; display:none;">
      Share File
    </button>

    <!-- Progress Bar -->
    <div class="progress-area" id="shareProgress" style="display:none; width:100%; margin-top:20px;">
      <div class="progress-outer" style="width:100%; height:4px; background:#0f1824;">
        <div class="progress-inner" id="shareProgressBar" style="height:100%; width:0%; background:#1c55d0;"></div>
      </div>
      <p id="shareProgressText" style="font-size:0.85rem; margin-top:8px; text-align:center;">0%</p>
    </div>

  </div>


  <!-- RECEIVE CONTENT -->
  <div id="receiveContent" class="content" style="display:none;">

    <h2 style="margin-bottom:1rem; text-align:center;">Receive File</h2>

    <label for="receiveCode" style="margin-bottom:0.5rem; display:block;">Enter code to connect to socket</label>
    <input type="text" id="receiveCode" maxlength="6" placeholder="6-digit code"
      class="subject-input" style="letter-spacing:3px; text-align:center;">

    <button class="submit-btn" id="connectReceiverBtn" style="margin-top:1rem;">
      Connect
    </button>

    <!-- Progress Bar -->
    <div class="progress-area" id="receiveProgress" style="display:none; width:100%; margin-top:20px;">
      <div class="progress-outer" style="width:100%; height:4px; background:#0f1824;">
        <div class="progress-inner" id="receiveProgressBar" style="height:100%; width:0%; background:#1c55d0;"></div>
      </div>
      <p id="receiveProgressText" style="font-size:0.85rem; margin-top:8px; text-align:center;">0%</p>
    </div>

    <!-- Download Button -->
    <button class="submit-btn" id="downloadFileBtn" style="margin-top:1rem; display:none;">
      Download File
    </button>

  </div>
</div>

  <script src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.12.2/gsap.min.js"></script>
  <script src="/socket.io/socket.io.js"></script>
  <script src="/javascripts/navbar.js"></script>
  <script src="/javascripts/largefile.js"></script>
</body>
</html>
